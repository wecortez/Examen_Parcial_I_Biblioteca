@model Examen_Biblioteca.Models.Prestamos

@{
    ViewData["Title"] = "Crear";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Crear Préstamo</h1>

<hr />

<div class="row justify-content-center">
    <div class="col-md-6 col-lg-5">
        <div class="card">
            <div class="card-body">

                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="mb-3">
                        <label asp-for="Libro" class="form-label"></label>
                        <select asp-for="LibroId" class="form-select" asp-items="ViewBag.LibroId">
                            <option value="">Seleccionar</option>
                        </select>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Miembro" class="form-label"></label>
                        <select asp-for="MiembroId" class="form-select" asp-items="ViewBag.MiembroId">
                            <option value="">Seleccionar</option>
                        </select>
                    </div>

                    <div class="mb-3">
                        <label asp-for="FechaPrestamo" class="form-label"></label>
                        <input asp-for="FechaPrestamo" type="date" class="form-control" />
                        <span asp-validation-for="FechaPrestamo" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="FechaDevolucion" class="form-label"></label>
                        <input asp-for="FechaDevolucion" type="date" class="form-control" />
                        <span asp-validation-for="FechaDevolucion" class="text-danger"></span>
                    </div>

                    <div class="form-check form-switch mb-3">
                        <input class="form-check-input" type="checkbox" asp-for="Devuelto" id="Devuelto">
                        <label class="form-check-label" for="Devuelto">
                            Devuelto
                        </label>
                    </div>

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary">
                            Guardar
                        </button>
                        <a asp-action="Index" class="btn btn-secondary">
                            Cancelar
                        </a>
                    </div>

                </form>

            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
