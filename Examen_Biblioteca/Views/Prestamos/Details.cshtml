@model Examen_Biblioteca.Models.Prestamos

@{
    ViewData["Title"] = "Detalle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Detalle del Préstamo</h1>

<hr />

<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
        <div class="card">
            <div class="card-body">

                <dl class="row mb-0">
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.FechaPrestamo)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.FechaPrestamo)
                    </dd>

                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.FechaDevolucion)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.FechaDevolucion)
                    </dd>

                    <dt class="col-sm-4">
                        Devuelto
                    </dt>
                    <dd class="col-sm-8">
                        @(Model.Devuelto ? "Sí" : "No")
                    </dd>

                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.Libro)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.Libro.Autor)
                    </dd>

                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.Miembro)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.Miembro.Apellido)
                    </dd>
                </dl>

            </div>

            <div class="card-footer d-flex gap-2">
                <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning">
                    Editar
                </a>
                <a asp-action="Index" class="btn btn-secondary">
                    Volver a la Lista
                </a>
            </div>
        </div>
    </div>
</div>
